<Account>:
    nameL: nameL
    memL: memL
    orgL: orgL
    name: "Account"
    orientation: "vertical"
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            texture:
                Gradient.vertical(get_color_from_hex("#1D2525"), get_color_from_hex("#3E986F"))

    BoxLayout:
        size_hint: 1, 0.1
