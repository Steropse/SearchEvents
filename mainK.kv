                anchor_y: "center"
                anchor_x: "center"
                Button:
                    size_hint: 0.5, 0.5
                    text: "..."
                    background_color: (0.8, 0.8, 0.8)
                    on_release:
                        root.eventsC()
                        app.root.current = "Events"
        BoxLayout:
            size_hint: 0.2, 0.5
            Button:
                text: "R"
                background_color: (0.8, 0.8, 0.8)
                on_release:
                    root.Reset()



    BoxLayout:
        Button:
            text: "Account"
            size_hint: 1, None
            height: "50dp"
            background_color: (0.9, 0.9, 0.9)
        Button:
            text: "Search"
            size_hint: 1, None
            height: "50dp"
            background_color: (0.9, 0.9, 0.9)
            on_release:
                root.transition = NoTransition()
                app.root.current = "Search"
                root.manager.transition.direction = "left"

        Button:
            text: "Append"
            size_hint: 1, None
            height: "50dp"
            background_color: (0.9, 0.9, 0.9)
            on_release:
                root.manager.transition = NoTransition()
